{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "dom",
      "es7"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "charset": "utf-8",
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "target"
  },
  "include": [
    "src"
  ]
}
